{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "root": true,
    "rules": {
        "indent": [
            "error",
            4
        ],
        "react/jsx-indent": [
            "error",
            4
        ],
        "react/jsx-indent-props": [
            "error",
            4
        ],
        "max-len": [
            "error",
            120
        ],
        "quotes": [
            "error",
            "double",
            {
                "avoidEscape": true
            }
        ],
        "no-plusplus": [
            "off"
        ],
        "no-console": [
            "off"
        ],
        "no-use-before-define": [
            "error",
            "nofunc"
        ],
        "array-element-newline": [
            "error",
            "consistent"
        ],
        "no-underscore-dangle": [
            "off"
        ],
        "no-nested-ternary": [
            "off"
        ]
    }
}
